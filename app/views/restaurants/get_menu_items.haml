%h1
%br
- if @menu_items.present?
  %p Menu Items for #{@location.name} on #{params[:day]}
  %table.table.table-striped
    %tr
      %th Menu Item
      %th Availability
      %th Feedback
      %th Feedback List

    - @menu_items.each do |menu|
      %tr
        %td
          = menu.item
        %td
          = menu.type_of
        %td
          = link_to "Give feedback", new_feedback_path(:menu_id => menu.id)
        %td
          = link_to "View feedback list", feedbacks_path(:menu_id => menu.id)
-else
  %p No Menu for #{@location.name} on #{params[:day]}
  = link_to "Add Menu", new_menu_path(:location_id => @location.id)